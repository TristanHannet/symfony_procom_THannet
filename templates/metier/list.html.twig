{% extends 'layout.html.twig' %}

{% block title %}Hello CmsController!{% endblock %}


{% block content %}
        <main class="app-content">
            <div class="app-title">
                <div>
                    <h1><i class="fa fa-users"></i>&nbsp;Métiers</h1>
                </div>
                <ul class="app-breadcrumb breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('cms_homepage') }}"><i class="fa fa-home fa-lg"></i></a>
                    </li>
                    <li class="breadcrumb-item">Métiers</li>
                </ul>
            </div>
            <div class="tile pb-5">
                <a href="{{ path('metier_creer') }}" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un Métier</a>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Métier</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for metier in metiers %}

                            <tr>
                                <td>{{ metier.nom|capitalize }} </td>

                                <td>

                                    <a href="{{ path('metier_modifier', {'id': metier.id}) }}" class="btn btn-info btn-sm">
                                        <i class="fa fa-pencil mr-0"></i>
                                    </a>
                                    <a href="{{ path('metier_sup', {'id': metier.id}) }}" class="btn btn-danger btn-sm">
                                        <i class="fa fa-trash-o mr-0"></i>
                                    </a>
                                </td>
                            </tr>

                        {% else %}
                            <div class="col-lg-12">
                                <div class="alert alert-warning">
                                    <p>Aucun métier!</p>
                                </div>
                            </div>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <hr/>
                <div class="float-right pagination">
                    {{ knp_pagination_render(metiers) }}
                </div>
            </div>
        </main>

{% endblock %}