                                    <th>
                                        <a href="{{ path('projet_detail', {'id': projet.id}) }}">{{ projet.intitule|capitalize }}</a>
                                    </th>
                                    <th>{{ projet.type|capitalize }}</th>
                                    <th>{{ projet.creation|date('d-m-Y') }}</th>
